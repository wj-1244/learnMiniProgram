/* program/category/category.wxss */
page{
  height: 100%;
}
.cates{
  height: 100%;
}
.cates .cates_container{
  height: calc( 100vh - 90rpx );
  display: flex;
}
.active{
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .left_menu {
  flex: 2;
  /* background-color: bisque; */
}
.cates .cates_container .right_content{
  flex: 5;
  /* background-color: gold; */
}
.menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.goods_list{
  display: flex;
  flex-wrap: wrap;
}
.goods_list navigator{
  width: 33.33%;
  text-align: center;
}
.goods_title{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.delimiter{
  color: #ccc;
  padding: 0 10px;
}